		}
	}else{
		if (0 == 0){
		  a[indj] = u0.x;
		  a[indj+1] = u0.y;
		  a[indj_p] = u1.x;
		  a[indj_p+1] = u1.y;
	  }else{
		a[indj] = alpha;
		a[indj+1] = alpha;
		a[indj_p] = alpha;
