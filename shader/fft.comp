			b[indj] = u0.x;
			b[indj+1] = u0.y;
			b[indj_p] = u1.x;
			b[indj_p+1] = u1.y;
			
			//a[indj] = x;
			//a[indj+1] = x+t;
			//a[indj_p] = j;
			//a[indj_p+1] = j+p;
			
			//a[indx] = x;
